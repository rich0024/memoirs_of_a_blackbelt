<% if @move && @move.errors.any? %>
  <div id="error_explanation">
    <h2><%= @move.errors.count %> error(s) prohibited this move from being saved:</h2>

    <ul>
    <% @move.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

